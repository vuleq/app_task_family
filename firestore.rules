rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Cho phép đọc tất cả users (để assign task), nhưng chỉ cho phép ghi user của chính mình
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // User profile
      match /profile/{profileId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Task Templates collection
    match /taskTemplates/{templateId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    // Rewards/Shop collection
    match /rewards/{rewardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User rewards (purchased items)
    match /userRewards/{userRewardId} {
      allow read, write: if request.auth != null;
    }
  }
}

